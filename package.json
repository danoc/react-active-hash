{
  "name": "react-scroll-marker",
  "description": "Indicate the active section of a page based on scroll position.",
  "version": "0.1.4",
  "author": "Daniel O'Connor <daniel@danoc.me>",
  "license": "MIT",
  "main": "dist/cjs/index.js",
  "module": "dist/es/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "yarn test:eslint && yarn test:jest && yarn test:prettier",
    "test:eslint": "eslint . --ignore-path .gitignore --ext .jsx --ext .js",
    "test:jest": "jest --coverage",
    "test:prettier": "prettier \"**/*.{js,jsx,css,scss,json,md,mdx,html}\" --list-different",
    "prepublishOnly": "rm -rf dist && rollup -c=./rollup.config.js",
    "format": "prettier \"**/*.{js,jsx,css,scss,json,md,mdx,html}\" --write",
    "release": "git checkout master && git pull && yarn test && yarn publish && git push --follow-tags",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "repository": "git@github.com:danoc/react-scroll-marker.git",
  "dependencies": {
    "react-waypoint": "^8.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-react": "^7.0.0",
    "@storybook/addon-actions": "^4.1.6",
    "@storybook/addon-links": "^4.1.6",
    "@storybook/addons": "^4.1.6",
    "@storybook/react": "^4.1.6",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.5",
    "codecov": "^3.1.0",
    "eslint": "^5.12.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^22.1.3",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.12.3",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "prettier": "^1.15.3",
    "pretty-quick": "^1.8.0",
    "prop-types": "^15.6.2",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-testing-library": "^5.4.4",
    "regenerator-runtime": "^0.13.1",
    "rollup": "^1.1.0",
    "rollup-plugin-babel": "^4.2.0"
  },
  "peerDependencies": {
    "prop-types": "^15.0.0",
    "react": "^16.3.0",
    "react-dom": "^16.0.0"
  }
